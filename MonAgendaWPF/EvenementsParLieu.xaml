<Window x:Class="MonAgendaWPF.EvenementsParLieu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EvenementsParLieu" Height="300" Width="400" MinWidth="400" MinHeight="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="Green">
            <TextBlock FontFamily="Calibri" FontSize="40" FontWeight="Heavy" Foreground="White"
                TextAlignment="Center" VerticalAlignment="Center" >Evenements par lieu</TextBlock>
        </Grid>
        
        <StackPanel Grid.Row="1">
            <ComboBox Name="lieuChoisi"/>
            <StackPanel Name="evenementsParLieu"/>
        </StackPanel>
    </Grid>
</Window>
