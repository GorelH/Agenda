<Window x:Class="MonAgendaWPF.EvenementDate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EvenementDate" Height="300" Width="400" MinWidth="400" MinHeight="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="Red">
            <TextBlock FontFamily="Calibri" FontSize="40" FontWeight="Heavy" Foreground="White"
                TextAlignment="Center" VerticalAlignment="Center" >Evenements par date</TextBlock>
        </Grid>

        <StackPanel Grid.Row="1" Name="evenements">
            
        </StackPanel>
    </Grid>
</Window>
